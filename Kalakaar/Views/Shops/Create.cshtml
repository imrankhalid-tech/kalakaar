@model Kalakaar.Models.Shop

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-left: 5%">
<h2>Create</h2>

<h4>Shop</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ShopType" class="control-label"></label>
                <select asp-for="ShopType" class="form-control">
                    <option value="women">Women's Fashion</option>
                    <option value="men">Men's Fashion</option>
                    <option value="home">Home Accessories</option>
                    <option value="dress">Accessories(Dress)</option>
                    <option value="fabric">Fabric/Unstich</option>
                </select>
                <span asp-validation-for="ShopType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCategory" class="control-label"></label>
                <input asp-for="ProductCategory" class="form-control" />
                <span asp-validation-for="ProductCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Avail" class="control-label"></label>
                <input asp-for="Avail" class="form-control" />
                <span asp-validation-for="Avail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discription" class="control-label"></label>
                <input asp-for="Discription" class="form-control" />
                <span asp-validation-for="Discription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image1Url" class="control-label"></label>
                <input asp-for="Image1Url" class="form-control" />
                <span asp-validation-for="Image1Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image2Url" class="control-label"></label>
                <input asp-for="Image2Url" class="form-control" />
                <span asp-validation-for="Image2Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgBanner" class="control-label"></label>
                <input asp-for="ImgBanner" class="form-control" />
                <span asp-validation-for="ImgBanner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</div>